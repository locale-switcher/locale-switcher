{
  "name": "locale-switcher",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/locale-switcher/locale-switcher/",
  "scripts": {
    "prepare": "shx sed -i \"s/\\*zoom/zoom/g\" node_modules/tachyons/css/tachyons.min.css",
    "check": "tsc",
    "locale:download": "node scripts/download-locales.mjs",
    "clean": "shx rm -rf dist .parcel-cache web-ext-artifacts",
    "dev": "parcel watch --target dev --no-hmr ./manifest.json",
    "build": "parcel build --target prod ./manifest.json",
    "pack": "web-ext build -s dist/prod --overwrite-dest -n '{name}-{version}.zip'",
    "pack-firefox": "web-ext build -s dist/prod --overwrite-dest -n '{name}-{version}-firefox.zip'",
    "dist": "run-s check clean build pack",
    "patch-firefox": "node scripts/patch-firefox-manifest.mjs",
    "dist-firefox": "run-s check clean build patch-firefox pack-firefox"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "sourceMap": false
    }
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "locale-emoji": "^0.3.0",
    "sortablejs": "^1.15.6",
    "tachyons": "^4.12.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.13.3",
    "@parcel/core": "^2.13.3",
    "@types/webextension-polyfill": "^0.12.1",
    "axios": "^1.7.9",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.3",
    "parcel-transformer-svelte-4": "^1.2.5",
    "postcss": "^8.4.49",
    "shx": "^0.3.4",
    "svelte": "^3.55.0",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.9.4",
    "web-ext": "^8.3.0"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
